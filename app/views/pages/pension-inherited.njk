{% extends "layouts/custom-journey.njk" %}

{% from "casa/components/radios/macro.njk" import casaGovukRadios with context %}
{% from "../macros/optional-details-message.njk" import optionalDetailsMessage with context %}

{% block casaPageTitle %}
    {{ t('pension-inherited:pageTitle', pensionProvider) }}
{% endblock %}

{% block journey_form %}

    {{ casaGovukRadios({
        name: 'inherited',
        fieldset: {
            legend: {
                html: optionalDetailsMessage(t('pension-inherited:inherited.label', pensionProvider)),
                isPageHeading: true,
                classes: 'govuk-fieldset__legend--l'
            }
        },
        hint: {
            text: t('pension-inherited:inherited.hint')
        },
        casaValue: formData.inherited,
        casaErrors: formErrors,
        items: [{
            value: 'yes',
            text: t('app:yes'),
            attributes: {
                'data-question': t('pension-inherited:inherited.label', pensionProvider),
                'data-answer': t('app:yes')
            }
        }, {
            value: 'no',
            text: t('app:no'),
            attributes: {
                'data-question': t('pension-inherited:inherited.label', pensionProvider),
                'data-answer': t('app:no')
            }
        }]
    }) }}

{% endblock %}
