{% extends "layouts/custom-journey.njk" %}

{% from "casa/components/radios/macro.njk" import casaGovukRadios with context %}
{% from "../macros/optional-details-message.njk" import optionalDetailsMessage with context %}

{% block casaPageTitle %}
    {{ t('pension-frequency:pageTitle', pensionProvider) }}
{% endblock %}

{% block journey_form %}

    {{ casaGovukRadios({
        name: 'frequency',
        fieldset: {
            legend: {
                html: optionalDetailsMessage(t('pension-frequency:frequency.label', pensionProvider)),
                isPageHeading: true,
                classes: 'govuk-fieldset__legend--l'
            }
        },
        casaValue: formData.frequency,
        casaErrors: formErrors,
        items: [{
            value: 'daily',
            text: t('pension-frequency:frequency.daily'),
            attributes: {
                'data-question': t('pension-frequency:frequency.label', pensionProvider),
                'data-answer': t('pension-frequency:frequency.daily')
            }
        }, {
            value: 'weekly',
            text: t('pension-frequency:frequency.weekly'),
            attributes: {
                'data-question': t('pension-frequency:frequency.label', pensionProvider),
                'data-answer': t('pension-frequency:frequency.weekly')
            }
        }, {
            value: 'monthly',
            text: t('pension-frequency:frequency.monthly'),
            attributes: {
                'data-question': t('pension-frequency:frequency.label', pensionProvider),
                'data-answer': t('pension-frequency:frequency.monthly')
            }
        }, {
            value: 'every2Weeks',
            text: t('pension-frequency:frequency.every2Weeks'),
            attributes: {
                'data-question': t('pension-frequency:frequency.label', pensionProvider),
                'data-answer': t('pension-frequency:frequency.every2Weeks')
            }
        }, {
            value: 'every4Weeks',
            text: t('pension-frequency:frequency.every4Weeks'),
            attributes: {
                'data-question': t('pension-frequency:frequency.label', pensionProvider),
                'data-answer': t('pension-frequency:frequency.every4Weeks')
            }
        }, {
            value: 'quarterly',
            text: t('pension-frequency:frequency.quarterly'),
            attributes: {
                'data-question': t('pension-frequency:frequency.label', pensionProvider),
                'data-answer': t('pension-frequency:frequency.quarterly')
            }
        }, {
            value: 'every6Months',
            text: t('pension-frequency:frequency.every6Months'),
            attributes: {
                'data-question': t('pension-frequency:frequency.label', pensionProvider),
                'data-answer': t('pension-frequency:frequency.every6Months')
            }
        }, {
            value: 'annually',
            text: t('pension-frequency:frequency.annually'),
            attributes: {
                'data-question': t('pension-frequency:frequency.label', pensionProvider),
                'data-answer': t('pension-frequency:frequency.annually')
            }
        }]
    }) }}

{% endblock %}
