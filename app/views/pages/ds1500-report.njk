{% extends "layouts/custom-journey.njk" %}

{% from "casa/components/radios/macro.njk" import casaGovukRadios with context %}

{% block casaPageTitle %}
    {{ t('ds1500-report:pageTitle') }}
{% endblock %}

{% block journey_form %}

    {{ casaGovukRadios({
        name: 'ds1500Report',
        fieldset: {
            legend: {
                text: t('ds1500-report:ds1500Report.label'),
                isPageHeading: true,
                classes: 'govuk-fieldset__legend--l'
            }
        },
        hint: {
            text: t('ds1500-report:ds1500Report.hint')
        },
        casaValue: formData.ds1500Report,
        casaErrors: formErrors,
        items: [{
                    text: t('app:yes'),
                    value: 'yes',
                    attributes: {
                        'data-question': t('ds1500-report:ds1500Report.label'),
                        'data-answer': t('app:yes')
                    }
                }, {
                    text: t('app:no'),
                    value: 'no',
                    attributes: {
                        'data-question': t('ds1500-report:ds1500Report.label'),
                        'data-answer': t('app:no')
                    }
                }, {
                    text: t('ds1500-report:ds1500Report.dontKnow'),
                    value: 'dontKnow',
                    attributes: {
                        'data-question': t('ds1500-report:ds1500Report.label'),
                        'data-answer': t('ds1500-report:ds1500Report.dontKnow')
                    }
                }]
    }) }}
{% endblock %}
