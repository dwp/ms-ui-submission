{% extends "layouts/custom-journey.njk" %}

{% from "casa/components/radios/macro.njk" import casaGovukRadios with context %}

{% block casaPageTitle %}
    {{ t('statutory-pay-end-date:pageTitle') }}
{% endblock %}

{% block journey_form %}

    {{ casaGovukRadios({
        name: 'statutoryPayEndDate',
        fieldset: {
            legend: {
                text: t('statutory-pay-end-date:statutoryEnd.label'),
                isPageHeading: true,
                classes: 'govuk-fieldset__legend--l'
            }
        },
        hint: {
            classes: 'govuk-hint-black',
            text: t('statutory-pay-end-date:statutoryEnd.hint') | safe
        },
        casaValue: formData.statutoryPayEndDate,
        casaErrors: formErrors,
        items: [{
            text: t('statutory-pay-end-date:statutoryEnd.yes'),
            value: 'yes',
            attributes: {
                'data-question': t('statutory-pay-end-date:statutoryEnd.label', statutoryPayType),
                'data-answer': t('statutory-pay-end-date:statutoryEnd.yes')
            }
        }, {
            text: t('statutory-pay-end-date:statutoryEnd.no'),
            value: 'no',
            attributes: {
                'data-question': t('statutory-pay-end-date:statutoryEnd.label', statutoryPayType),
                'data-answer': t('statutory-pay-end-date:statutoryEnd.no')
            }
        }]
    }) }}
{% endblock %}
