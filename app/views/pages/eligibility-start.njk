{% extends "layouts/custom-journey.njk" %}

{% from "components/button/macro.njk" import govukButton %}
{% from "components/back-link/macro.njk" import govukBackLink %}
{# journeyPreviousUrl is set to true stops casa adding the govuk-main-wrapper--l to the main block and messing up the top margin #}
{%  set journeyPreviousUrl = true %}

{% block casaPageTitle %}
    {{ t('eligibility-start:pageTitle') }} - {{ t('app:commonTitle') }}
{% endblock %}

{% block beforeContent %}
    {% include "casa/partials/phase_banner_beta.njk" %}
    {{ govukBackLink({
        text: t('app:back'),
        href: '/before-you-start'
    }) }}
{% endblock %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="form-title govuk-heading-l">{{ t('eligibility-start:h1') }}</h1>
            <p class="govuk-body">{{ t('eligibility-start:p1') }}</p>
            <p class="govuk-body">
                {{ govukButton({
                    text: t('eligibility-start:continue'),
                    href: "/coronavirus",
                    classes: 'govuk-button govuk-!-margin-bottom-8'
                }) }}
            </p>
        </div>
    </div>
{% endblock %}

{% block bodyEnd %}
    {% include "casa/partials/scripts.njk" %}
{% endblock %}
