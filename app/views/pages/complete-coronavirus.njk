{% from "components/button/macro.njk" import govukButton %}
{% from "components/details/macro.njk" import govukDetails %}
{% from "components/inset-text/macro.njk" import govukInsetText %}
{% extends "layouts/custom-journey.njk" %}

{% block casaPageTitle %}
    {{ t('complete-coronavirus:pageTitle') }}
{% endblock %}

{% block content %}

{% set medicalEvidenceDetails %}
    <p class="govuk-body"> {{ t('complete-coronavirus:medicalEvidence.conditionalReveal.text1') }}</p>
    <ul class="govuk-list govuk-list--bullet">
        <li>{{ t('complete-coronavirus:medicalEvidence.conditionalReveal.li1') }}</li>
        <li>{{ t('complete-coronavirus:medicalEvidence.conditionalReveal.li2') }}</li>
        <li>{{ t('complete-coronavirus:medicalEvidence.conditionalReveal.li3') }}</li>
        <li>{{ t('complete-coronavirus:medicalEvidence.conditionalReveal.li4') }}</li>
    </ul>
    <p class="govuk-body"> {{ t('complete-coronavirus:medicalEvidence.conditionalReveal.text2') }}</p>
{% endset %}

{% set sendEvidenceInset %}
    <p class="govuk-body govuk-!-font-weight-bold">{{ t('complete-coronavirus:sendEvidence.insetText.heading') }}</p>
    <p>
        {{ t('complete-coronavirus:sendEvidence.insetText.line1') }}
    </p>
{% endset %}

{% set shieldingInset1 %}
    <p class="govuk-body govuk-!-font-weight-bold">
        {{ t('complete-coronavirus:shielding.inset1h4') }}
    </p>
    <p>
        {{ t('complete-coronavirus:shielding.inset1body') }}
    </p>
{% endset %}

{% set shieldingInset2 %}
    <p class="govuk-body govuk-!-font-weight-bold">
        {{ t('complete-coronavirus:shielding.inset2h4') }}
    </p>
    <p>
        {{ t('complete-coronavirus:shielding.inset2body') }}
    </p>
{% endset %}

{% set nonShieldingInset %}
    <p class="govuk-body govuk-!-font-weight-bold">
        {{ t('complete-coronavirus:non-shielding.inset3h4') }}
    </p>
    <p>
        {{ t('complete-coronavirus:non-shielding.inset3body') }}
    </p>
{% endset %}

{% set shieldingSummaryDetails %}
    <p class="govuk-body"> {{ t('complete-coronavirus:shielding.bodydetails1') }}</p>
    <ul class="govuk-list govuk-list--bullet">
        <li>{{ t('complete-coronavirus:shielding.li8') }}</li>
        <li>{{ t('complete-coronavirus:shielding.li9') }}</li>
        <li>{{ t('complete-coronavirus:shielding.li10') }}</li>
        <li>{{ t('complete-coronavirus:shielding.li11') }}</li>
    </ul>
    <p class="govuk-body"> {{ t('complete-coronavirus:shielding.bodydetails2') }}</p>
{% endset %}


<div class="govuk-width-container">
    <div class="govuk-grid-row">
        <div class="govuk-panel govuk-panel--confirmation govuk-!-margin-bottom-6 govuk-!-padding-0">
            <h1 class="govuk-panel__large govuk-!-margin-bottom-2 govuk-!-font-size-36">
                {{ t('complete-coronavirus:header') }}
            </h1>
            <div class="govuk-panel__body govuk-!-font-size-27">
                {{ t('complete-coronavirus:refReminder') }}
                <p></p>
            </div>
        </div>

        <div class="govuk-grid-column-two-thirds">

            <h2 class="govuk-heading-l">{{ t('complete-coronavirus:whatNow.title') }}</h2>

            <p class="govuk-body">
                {{ t('complete:coronavirus.text1', fourteenDaysLater) | safe }}
            </p>

            <p class="govuk-body">
                {{ t('complete:coronavirus.text2') | safe }}
            </p>

            <p class="govuk-body">
                {{ t('complete:coronavirus.text3') }}
            </p>

                <h3 class="govuk-heading-m">
                    {{ t('complete-coronavirus:non-shielding.h3') }}
                </h3>

                <p class="govuk-body">
                    {{ t('complete-coronavirus:non-shielding.body19') }}
                </p>

                <p class="govuk-body">
                    {{ t('complete-coronavirus:non-shielding.body20') }}
                </p>

                <h4 class="govuk-heading-s">
                    {{ t('complete-coronavirus:non-shielding.h4-1')}}
                </h4>

                <p class="govuk-body">
                    {{ t('complete-coronavirus:non-shielding.body21') | safe }}
                </p>

                <ul class="govuk-list govuk-list--bullet">
                    <li>{{ t('complete-coronavirus:non-shielding.li12') }}</li>
                    <li>{{ t('complete-coronavirus:non-shielding.li13') }}</li>
                    <li>{{ t('complete-coronavirus:non-shielding.li14') }}</li>
                    <li>{{ t('complete-coronavirus:non-shielding.li15') }}</li>
                </ul>

                <p class="govuk-body">
                    {{ t('complete-coronavirus:non-shielding.body22') }}
                </p>

                <p class="govuk-body">
                    {{ t('complete-coronavirus:non-shielding.body23') }}
                </p>

                <h4 class="govuk-heading-s">
                    {{ t('complete-coronavirus:non-shielding.h4-2')}}
                </h4>

                <p class="govuk-body">
                    {{ t('complete-coronavirus:non-shielding.body24') }}
                </p>

                <p class="govuk-body">
                    {{ t('complete-coronavirus:non-shielding.body25') | safe }}
                </p>

                {{ govukInsetText({
                    html: nonShieldingInset
                }) }}

            {% if universalCredit %}
                <h3 class="govuk-heading-m">
                    {{ t('complete-coronavirus:universalCreditYes.heading') }}
                </h3>
                <p class="govuk-body">
                    {{ t('complete-coronavirus:universalCreditYes.text1') | safe }}
                </p>
                <p class="govuk-body">
                    {{ t('complete-coronavirus:universalCreditYes.text2') }}
                </p>
            {% else %}
                <h3 class="govuk-heading-m">
                    {{ t('complete-coronavirus:universalCreditNo.heading') }}
                </h3>
                <p class="govuk-body">
                    {{ t('complete-coronavirus:universalCreditNo.text1') }}
                </p>
                <p class="govuk-body">
                    {{ t('complete-coronavirus:universalCreditNo.text2') }}
                </p>
                <p class="govuk-body">
                    {{ t('complete-coronavirus:universalCreditNo.text3') }}
                </p>
                <p class="govuk-body">
                    {{ t('complete-coronavirus:universalCreditNo.text4') | safe }}
                </p>
            {% endif %}

            <h3 class="govuk-heading-m">
                {{ t('complete-coronavirus:feedback.feedbackHeading') }}
            </h3>

            <p class="govuk-body">
                {{ t('complete-coronavirus:feedback.feedbackQuestionLink') | safe }}
            </p>

            <p class="govuk-body">
                {{ t('complete-coronavirus:feedback.researchQuestion') | safe }}
            </p>

            <p class="govuk-body">
                {{ govukButton({
                    text: t('app:finish'),
                    href: t('app:finishLink')
                }) }}
            </p>
        </div>
    </div>
</div>

{% endblock %}
{% block bodyEnd %}
    {% include "casa/partials/scripts.njk" %}
{% endblock %}
