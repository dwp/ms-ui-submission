{% extends "layouts/custom-journey.njk" %}

{% from "casa/components/radios/macro.njk" import casaGovukRadios with context %}

{% block casaPageTitle %}
    {{ t('employment-expenses:pageTitle', employerName) }}
{% endblock %}

{% block journey_form %}

    {{ casaGovukRadios({
        name: 'expenses',
        fieldset: {
            legend: {
                text: t('employment-expenses:expenses.label', employerName),
                isPageHeading: true,
                classes: 'govuk-fieldset__legend--l'
            }
        },
        casaValue: formData.expenses,
        casaErrors: formErrors,
        items: [{
            value: 'yes',
            text: t('employment-expenses:expenses.yes'),
            attributes: {
                'data-question': t('employment-expenses:expenses.label', employerName),
                'data-answer': t('employment-expenses:expenses.yes')
            }
        }, {
            value: 'no',
            text: t('employment-expenses:expenses.no'),
            attributes: {
                'data-question': t('employment-expenses:expenses.label', employerName),
                'data-answer': t('employment-expenses:expenses.no')
            }
        }]
    }) }}

{% endblock %}
