{% extends "layouts/custom-journey.njk" %}

{% from "casa/components/radios/macro.njk" import casaGovukRadios with context %}

{% block casaPageTitle %}
    {{ t('coronavirus-shielding:pageTitle') }}
{% endblock %}

{% block journey_form %}

    {{ casaGovukRadios({
        name: 'coronavirusShielding',
        fieldset: {
            legend: {
                text: t('coronavirus-shielding:coronavirusShielding.label'),
                isPageHeading: true,
                classes: 'govuk-fieldset__legend--l'
            }
        },
        hint: {
            classes: 'govuk-hint-black',
            text: t('coronavirus-shielding:coronavirusShielding.hint') | safe
        },
        casaValue: formData.coronavirusShielding,
        casaErrors: formErrors,
        items: [{
            value: 'yes',
            text: t('coronavirus-shielding:coronavirusShielding.yes'),
            attributes: {
                'data-question': t('coronavirus-shielding:coronavirusShielding.label'),
                'data-answer': t('coronavirus-shielding:coronavirusShielding.yes')
            }
        }, {
            value: 'no',
            text: t('coronavirus-shielding:coronavirusShielding.no'),
            attributes: {
                'data-question': t('coronavirus-shielding:coronavirusShielding.label'),
                'data-answer': t('coronavirus-shielding:coronavirusShielding.no')
            }
        }]
    }) }}

{% endblock %}
