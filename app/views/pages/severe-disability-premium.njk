{% extends "layouts/custom-journey.njk" %}

{% from "casa/components/radios/macro.njk" import casaGovukRadios with context %}

{% block casaPageTitle %}
    {{ t('severe-disability-premium:pageTitle') }}
{% endblock %}

{% block journey_form %}

    {{ casaGovukRadios({
        name: 'severeDisabilityPremium',
        fieldset: {
            legend: {
                text: t('severe-disability-premium:label'),
                isPageHeading: true,
                classes: 'govuk-fieldset__legend--l'
            }
        },
        hint: {
            text: t('severe-disability-premium:hint') | safe,
            classes: 'govuk-hint-black'
        },
        casaValue: formData.severeDisabilityPremium,
        casaErrors: formErrors,
           items: [{
                    text: t('severe-disability-premium:yes'),
                    value: 'yes',
                    attributes: {
                        'data-question': t('severe-disability-premium:label'),
                        'data-answer': t('severe-disability-premium:yes')
                    }
                }, {
                    text: t('severe-disability-premium:no'),
                    value: 'no',
                    attributes: {
                        'data-question': t('severe-disability-premium:label'),
                        'data-answer': t('severe-disability-premium:no')
                    }
                }, {
                    text: t('severe-disability-premium:notSure'),
                    value: 'notSure',
                    attributes: {
                        'data-question': t('severe-disability-premium:label'),
                        'data-answer': t('severe-disability-premium:notSure')
                    }
                }] 
    }) }}
{% endblock %}
