{% extends "layouts/custom-journey.njk" %}

{% from "casa/components/radios/macro.njk" import casaGovukRadios with context %}

{% block casaPageTitle %}
    {{ t('work-overseas:pageTitle') }}
{% endblock %}

{% block journey_form %}

    {{ casaGovukRadios({
        name: 'workOverseas',
        fieldset: {
            legend: {
                text: t ('work-overseas:heading'),
                isPageHeading: true,
                classes: 'govuk-fieldset__legend--l'
            }
        },
        hint: {
            html: t('work-overseas:hint')
        },
        casaValue: formData.workOverseas,
        casaErrors: formErrors,
        items: [{
            checked : formData.workOverseas === 'yes',
            value: 'yes',
            text: t('work-overseas:yes'),
            attributes: {
                'data-question': t('work-overseas:heading'),
                'data-answer': t('work-overseas:yes')
            }
        }, {
            checked : formData.workOverseas === 'no',
            value: 'no',
            text: t('work-overseas:no'),
            attributes: {
                'data-question': t('work-overseas:heading'),
                'data-answer': t('work-overseas:no')
            }
        }]
    }) }}

{% endblock %}