{% extends "layouts/custom-journey.njk" %}

{% from "casa/components/radios/macro.njk" import casaGovukRadios with context %}

{% block casaPageTitle %}
    {{ t('claim-start-date-after-statutory-sick-pay:pageTitle', { calculatedDate : sspEndDate | dayAfterDate(sspEndDate, htmlLang) }) }}
{% endblock %}

{% block journey_form %}
    {{ casaGovukRadios({
        name: 'claimStartDateAfterSsp',
        fieldset: {
            legend: {
                text: t('claim-start-date-after-statutory-sick-pay:claimStartDateAfterSsp.label', { calculatedDate : sspEndDate | dayAfterDate(sspEndDate, htmlLang) }) | safe,
                isPageHeading: true,
                classes: 'govuk-fieldset__legend--l'
            }
        },
        hint: {
            html: t('claim-start-date-after-statutory-sick-pay:claimStartDateAfterSsp.hint')
        },
        casaValue: formData.claimStartDateAfterSsp,
        casaErrors: formErrors,
        items: [{
            text: t('claim-start-date-after-statutory-sick-pay:claimStartDateAfterSsp.yes'),
            value: 'yes',
            attributes: {
                'data-question': t('claim-start-date-after-statutory-sick-pay:claimStartDateAfterSsp.label', { calculatedDate : sspEndDate | dayAfterDate(sspEndDate, htmlLang) }),
                'data-answer': t('claim-start-date-after-statutory-sick-pay:claimStartDateAfterSsp.yes')
            }
        }, {
            text: t('claim-start-date-after-statutory-sick-pay:claimStartDateAfterSsp.no'),
            value: 'no',
            attributes: {
                'data-question': t('claim-start-date-after-statutory-sick-pay:claimStartDateAfterSsp.label', { calculatedDate : sspEndDate | dayAfterDate(sspEndDate, htmlLang) }),
                'data-answer': t('claim-start-date-after-statutory-sick-pay:claimStartDateAfterSsp.no')
            }
        }]
    }) }}
{% endblock %}
