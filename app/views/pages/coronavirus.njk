{% extends "layouts/custom-journey.njk" %}

{% from "casa/components/radios/macro.njk" import casaGovukRadios with context %}

{% block casaPageTitle %}
    {{ t('coronavirus:pageTitle') }}
{% endblock %}

{% block journey_form %}
<h1 class="govuk-heading-l govuk-fieldset__legend--l">{{ t('coronavirus:coronavirusReasonForClaim.label') }}</h1>
<p class="govuk-body">{{ t('coronavirus:coronavirusReasonForClaim.hint') | safe}}</p>
    {{ casaGovukRadios({
        name: 'coronavirusReasonForClaim',
        fieldset: {
            legend: {
                text: t('coronavirus:coronavirusReasonForClaim.label'),
                classes: 'govuk-visually-hidden'
            }
        },
        casaValue: formData.coronavirusReasonForClaim,
        casaErrors: formErrors,
        items: [{
            text: t('coronavirus:coronavirusReasonForClaim.yes'),
            value: 'yes',
            attributes: {
                'data-question': t('coronavirus:coronavirusReasonForClaim.label'),
                'data-answer': t('coronavirus:coronavirusReasonForClaim.yes')
            }
        }, {
            text: t('coronavirus:coronavirusReasonForClaim.no'),
            value: 'no',
            attributes: {
                'data-question': t('coronavirus:coronavirusReasonForClaim.label'),
                'data-answer': t('coronavirus:coronavirusReasonForClaim.no')
            }
        }]
    }) }}
{% endblock %}
