{% extends "layouts/custom-journey.njk" %}

{% from "casa/components/radios/macro.njk" import casaGovukRadios with context %}

{% block casaPageTitle %}
    {{ t('coronavirus-other-condition:pageTitle') }}
{% endblock %}

{% block journey_form %}
    {{ casaGovukRadios({
        name: 'coronavirusOtherCondition',
        fieldset: {
            legend: {
                text: t('coronavirus-other-condition:coronavirusOtherCondition.label'),
                isPageHeading: true,
                classes: 'govuk-fieldset__legend--l'
            }
        },
        casaValue: formData.coronavirusOtherCondition,
        casaErrors: formErrors,
        items: [{
            text: t('coronavirus-other-condition:coronavirusOtherCondition.yes'),
            value: 'yes',
            attributes: {
                'data-question': t('coronavirus-other-condition:coronavirusOtherCondition.label'),
                'data-answer': t('coronavirus-other-condition:coronavirusOtherCondition.yes')
            }
        }, {
            text: t('coronavirus-other-condition:coronavirusOtherCondition.no'),
            value: 'no',
            attributes: {
                'data-question': t('coronavirus-other-condition:coronavirusOtherCondition.label'),
                'data-answer': t('coronavirus-other-condition:coronavirusOtherCondition.no')
            }
        }]
    }) }}
{% endblock %}
