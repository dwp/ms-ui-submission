{% extends "layouts/custom-journey.njk" %}

{% from "casa/components/radios/macro.njk" import casaGovukRadios with context %}

{% block casaPageTitle %}
    {{ t('employment-support:pageTitle', employerName) }}
{% endblock %}

{% block journey_form %}

    {{ casaGovukRadios({
        name: 'support',
        fieldset: {
            legend: {
                text: t('employment-support:support.label', employerName),
                isPageHeading: true,
                classes: 'govuk-fieldset__legend--l'
            }
        },
        hint: {
            text: t('employment-support:support.hint')
        },
        casaValue: formData.support,
        casaErrors: formErrors,
        items: [{
                    text: t('app:yes'),
                    value: 'yes',
                    attributes: {
                        'data-question': t('employment-support:support.label', employerName),
                        'data-answer': t('app:yes')
                    }
                }, {
                    text: t('app:no'),
                    value: 'no',
                    attributes: {
                        'data-question': t('employment-support:support.label', employerName),
                        'data-answer': t('app:no')
                    }
                }, {
                    text: t('employment-support:support.notSure'),
                    value: 'notSure',
                    attributes: {
                        'data-question': t('employment-support:support.label', employerName),
                        'data-answer': t('employment-support:support.notSure')
                    }
                }]
    }) }}
{% endblock %}
