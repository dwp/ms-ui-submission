{% extends "layouts/custom-journey.njk" %}

{% from "casa/components/radios/macro.njk" import casaGovukRadios with context %}

{% block casaPageTitle %}
    {{ t('language-preference-speaking:pageTitle') }}
{% endblock %}

{% block journey_form %}

    <h1 class="govuk-heading-l">
        {{ t('language-preference-speaking:langPref.h1') }}
    </h1>

    <p class="govuk-body">
        {{ t('language-preference-speaking:langPref.p1') }}
    </p>

    {{ casaGovukRadios({
        name: 'langPrefSpeaking',
        fieldset: {
            legend: {
                isPageHeading: true,
                classes: 'govuk-fieldset__legend--l'
            }
        },
        hint: {
            html: t('language-preference-speaking:langPref.hint')
        },
        casaValue: formData.langPrefSpeaking,
        casaErrors: formErrors,
        items: [{
            text: t('language-preference-speaking:langPref.English'),
            value: 'English',
            attributes: {
                'data-answer': t('language-preference-speaking:langPref.English')
            }
        }, {
            text: t('language-preference-writing:langPref.Welsh'),
            value: 'Welsh',
            attributes: {
                'data-answer': t('language-preference-speaking:langPref.Welsh')
            }
        }]
    }) }}
{% endblock %}
