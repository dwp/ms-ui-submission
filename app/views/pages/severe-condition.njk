{% extends "layouts/custom-journey.njk" %}

{% from "casa/components/radios/macro.njk" import casaGovukRadios with context %}

{% block casaPageTitle %}
    {{ t('severe-condition:pageTitle') }}
{% endblock %}

{% block journey_form %}

    {{ casaGovukRadios({
        name: 'severeCondition',
        fieldset: {
            legend: {
                text: t('severe-condition:severeCondition.label'),
                isPageHeading: true,
                classes: 'govuk-fieldset__legend--l'
            }
        },        
        hint: {
            text: t('severe-condition:severeCondition.hint'),
            classes: 'govuk-hint-black'
        },
        casaValue: formData.severeCondition,
        casaErrors: formErrors,
        items: [{
            text: t('app:yes'),
            value: 'yes',
            attributes: {
                'data-question': t('severe-condition:severeCondition.label'),
                'data-answer': t('app:yes')
            }
        }, {
            text: t('app:no'),
            value: 'no',
            attributes: {
                'data-question': t('severe-condition:severeCondition.label'),
                'data-answer': t('app:no')
            }
        }]
    }) }}
{% endblock %}
