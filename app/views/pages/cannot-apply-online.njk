{% extends "layouts/custom-journey.njk" %}

{% from "components/button/macro.njk" import govukButton %}
{% from "components/back-link/macro.njk" import govukBackLink %}
{# journeyPreviousUrl is set to true stops casa adding the govuk-main-wrapper--l to the main block and messing up the top margin #}
{%  set journeyPreviousUrl = true %}

{% block casaPageTitle %}
    {{ t('cannot-apply-online:pageTitle') }} - {{ t('app:commonTitle') }}
{% endblock %}

{% block beforeContent %}
    {% include "casa/partials/phase_banner_beta.njk" %}
    {{ govukBackLink({
        text: t('app:back'),
        href: '/who-is-applying'
    }) }}
{% endblock %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="form-title govuk-heading-l">{{ t('cannot-apply-online:h1') }}</h1>
            <p class="govuk-body">{{ t('cannot-apply-online:p1') }}</p>
            <p class="govuk-body">{{ t('cannot-apply-online:p2') }}</p>
            <p class="govuk-body">{{ t('cannot-apply-online:p3') }}</p>
            <p class="govuk-body">{{ t('cannot-apply-online:p4') }}</p>
            <p class="govuk-body">{{ t('cannot-apply-online:p5') | safe }}</p>
            <p class="govuk-body">{{ t('cannot-apply-online:p6') | safe }}</p>
            <p class="govuk-body">{{ t('cannot-apply-online:p7') }}</p>
            <p class="govuk-body">{{ t('cannot-apply-online:p8') }}</p>
            <p class="govuk-body">{{ t('cannot-apply-online:p9') | safe }}</p>
        </div>
    </div>
{% endblock %}

{% block bodyEnd %}
    {% include "casa/partials/scripts.njk" %}
{% endblock %}
