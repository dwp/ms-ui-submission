{% extends "layouts/custom-journey.njk" %}

{% from "govuk/components/character-count/macro.njk" import govukCharacterCount %}

{% block casaPageTitle %}
    {{ t('voluntary-work-role:pageTitle', { organisationName : organisationName }) }}
{% endblock %}

{% block journey_form %}

    {{ govukCharacterCount({
        id: 'f-role',
        maxlength: 500,
        label: {
            text: t('voluntary-work-role:role.label', { organisationName : organisationName }),
            isPageHeading: true,
            classes: 'govuk-label--l'
        },
        hint: {
            text: t('voluntary-work-role:role.hint')
        },
        name: 'role',
        value: formData.role,
        errorMessage: formErrors
    }) }}

{% endblock %}
