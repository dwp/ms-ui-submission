{% extends "layouts/custom-journey.njk" %}

{% from "casa/components/textarea/macro.njk" import casaGovukTextarea with context %}

{% block casaPageTitle %}
    {{ t('voluntary-work-role:pageTitle', organisationName) }}
{% endblock %}

{% block journey_form %}

    {{ casaGovukTextarea({
        label: {
            text: t('voluntary-work-role:role.label', organisationName),
            isPageHeading: true,
            classes: 'govuk-label--l'
        },
        name: 'role',
        value: formData.role,
        casaErrors: formErrors
    }) }}
    
{% endblock %}
